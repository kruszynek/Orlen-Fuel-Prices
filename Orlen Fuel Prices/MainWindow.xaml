<Window x:Name="MainWindow1" x:Class="Orlen_Fuel_Prices.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Orlen_Fuel_Prices"
        mc:Ignorable="d"
        Title="Orlen Fuel Prices" Height="450" Width="799" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="/crude-oil.png" Background="White" SizeToContent="WidthAndHeight">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="RowsStackPanel" Margin="10,10,10,10" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="DateText" TextWrapping="Wrap" FontSize="20" Foreground="Black" FontWeight="Bold" Margin="10,10,10,10" Grid.Row="0" Grid.ColumnSpan="2"/>

    </Grid>
</Window>